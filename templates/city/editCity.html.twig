{% extends 'base.html.twig' %}


{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Modifier une ville{% endblock %}

{% block body %}
    
    
    <h1>Modifier une ville</h1>   
    {{ form_start(form)}}


    <div class="row">
        <div class="col-md-5">{{ form_row(form.name) }}</div>
        <div class="col-md-5">{{ form_row(form.population) }}</div>
    </div>

    {{ form_widget(form) }}
    {{ form_end(form) }}

{% endblock %}